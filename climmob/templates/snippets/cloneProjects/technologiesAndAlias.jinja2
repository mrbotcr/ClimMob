
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5> {{ _("Technologies and technology options") }}</h5>
        </div>
        <div class="ibox-content" >
            {% if project_technologies %}
                {% for tech in project_technologies %}
                    <h2>{{ tech.tech_name }}</h2>
                    {% if tech.alias or tech.aliasExtra%}
                        <table  class="table table-striped table-bordered">
                            {% for alias in tech.alias %}
                                <tr>
                                    <td>
                                        {{ alias.alias_name }}
                                    </td>
                                </tr>
                            {% endfor %}

                            {% for alias in tech.aliasExtra %}
                                <tr>
                                    <td>
                                        {{ alias.alias_name }}  ({{ _("only for this project") }})
                                    </td>
                                </tr>
                            {% endfor %}

                        </table>
                    {% endif %}


                    {% if not tech.alias and not tech.aliasExtra %}
                        <div style="width: 100%; text-align: center">
                            <h3>{{ _("The technology has no assigned technology options.") }}</h3>
                        </div>
                    {% endif %}
                {% endfor %}
            {% else %}
                <div style="width: 100%; text-align: center">
                    <h3>{{ _("The project has no assigned technologies.") }}</h3>
                </div>
            {% endif %}
        </div>
    </div>
